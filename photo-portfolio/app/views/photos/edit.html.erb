<% form_for :photo, @photo, :url => "/photos/save/#{@photo.id}" do |form| %>
  <%= form.text_field :name%>
  <%= select_tag 'photo[album]',options_from_collection_for_select(@albums,'id','name', :selected => @photo.album.id) %>
  <%= form.check_box :slideshow %>
  <%= submit_tag 'save' %>
<% end %>
<%= button_to 'Destroy', "/photos/destroy/#{@photo.id}" %>
