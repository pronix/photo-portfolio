<p>
  <b>Name:</b>
  <%=h @album.name %>
</p>

<p>
  <b>Description:</b>
  <%=h @album.description %>
</p>

<br />

<% @collection.each do |photo|%>
      <% @pre = params[:albumid] ? "/album/#{photo.album.id}" : '' %>
        <div  class="thumbnail" id="item_<%= photo.id %>">
          <%= link_to image_tag(photo.image.url(:thumb)), "#{@pre}/photos/#{photo.id}" %>
          <%= link_to 'Edit',"/photos/edit/#{photo.id}" %>
        </div>
      <% end %>



<%= link_to 'Edit', edit_album_path(@album) %> |
