<h1>New contact</h1>

<% form_for(@contact) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.label :wphone %><br />
    <%= f.text_field :wphone %>
  </p>
 <p>
   <b>Address</b><br />
   <%= javascript_include_tag :fckeditor %>
   <%= fckeditor_textarea( :contact, :address, :height => '450px', :ajax => false) %>
 </p>
 <p>
   <b>Infirmation about author</b><br />
   <%= javascript_include_tag :fckeditor %>
   <%= fckeditor_textarea( :contact, :information, :height => '450px', :ajax => false) %>
 </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', contacts_path %>