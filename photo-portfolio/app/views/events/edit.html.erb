<h1>Editing event</h1>

<% form_for(@event) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    Short Description:<br />
    <%= f.text_area :short_desc %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= javascript_include_tag :fckeditor %>
    <%= fckeditor_textarea( :event, :body, :height => '450px', :ajax => false) %>
  </p>
  <p>
    <%= f.label :date %><br />
    <%= f.datetime_select :date %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @event %> |
<%= link_to 'Back', events_path %>